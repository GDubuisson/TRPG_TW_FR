<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fiche de Personnage</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.5;
        }
        h1, h2 {
            border-bottom: 2px solid #333;
        }
        .section {
            margin-bottom: 30px;
        }
        .field-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
        .field {
            flex: 1 1 200px;
        }
        .field label {
            font-weight: bold;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        table th, table td {
            border: 1px solid #333;
            padding: 8px;
            text-align: center;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
    </style>
</head>
<body>
<h1>Fiche de Personnage</h1>

<!-- Section Identité -->
<div class="section">
    <h2>Identité</h2>
    <div class="field-group">
        <div class="field"><label>Nom :</label> <span>{{nom}}</span></div>
        <div class="field"><label>Race :</label> <span>{{race}}</span></div>
        <div class="field"><label>Genre :</label> <span>{{genre}}</span></div>
        <div class="field"><label>Âge :</label> <span>{{age}}</span></div>
        <div class="field"><label>Terre natale :</label> <span>{{terre_natale}}</span></div>
        <div class="field"><label>Profession :</label> <span>{{profession}}</span></div>
        <div class="field"><label>Compétence exclusive :</label> <span>{{competence_exclusive}}</span></div>
    </div>
</div>

<!-- Section Caractéristiques -->
<div class="section">
    <h2>Caractéristiques</h2>
    <table>
        <tr>
            <th>INT</th><th>RÉF</th><th>DEX</th><th>COR</th><th>VIT</th><th>EMP</th><th>TECH</th><th>VOL</th><th>CHA</th>
        </tr>
        <tr>
            <td>{{int}}</td><td>{{ref}}</td><td>{{dex}}</td><td>{{cor}}</td><td>{{vit}}</td><td>{{emp}}</td><td>{{tech}}</td><td>{{vol}}</td><td>{{cha}}</td>
        </tr>
    </table>
</div>

<!-- Section Aptitudes physiques -->
<div class="section">
    <h2>Aptitudes physiques</h2>
    <table>
        <tr>
            <th>Étouffement</th><th>Course</th><th>Saut</th><th>PS</th><th>END</th><th>ENC</th><th>RÉC</th>
        </tr>
        <tr>
            <td>{{etou}}</td><td>{{cou}}</td><td>{{saut}}</td><td>{{ps}}</td><td>{{end}}</td><td>{{enc}}</td><td>{{rec}}</td>
        </tr>
    </table>
</div>

<!-- Section Combats -->
<div class="section">
    <h2>Compétences de Combat</h2>
    <div class="field-group">
        <div class="field"><label>Poings :</label> <span>{{poings}}</span></div>
        <div class="field"><label>Pieds :</label> <span>{{pieds}}</span></div>
    </div>
</div>

<!-- Section Statut -->
<div class="section">
    <h2>Statut</h2>
    <div class="field-group">
        <div class="field"><label>Statut social :</label> <span>{{statut_social}}</span></div>
        <div class="field"><label>Particularité :</label> <span>{{particularite}}</span></div>
        <div class="field"><label>Réputation :</label> <span>{{reputation}}</span></div>
        <div class="field"><label>Points de progression :</label> <span>{{points_progression}}</span></div>
    </div>
</div>

<!-- Section Équipement -->
<div class="section">
    <h2>Équipement</h2>
    <ul>
        {{#each equipement}}
            <li>{{this.nom}} - Poids : {{this.poids}} - Notes : {{this.notes}}</li>
        {{/each}}
    </ul>
</div>

<!-- Section Armure -->
<div class="section">
    <h2>Armure</h2>
    <table>
        <tr>
            <th>Localisation</th><th>PA</th><th>Dégâts</th>
        </tr>
        <tr>
            <td>Tête</td><td>{{armure.tete.pa}}</td><td>{{armure.tete.degats}}</td>
        </tr>
        <tr>
            <td>Torse</td><td>{{armure.torse.pa}}</td><td>{{armure.torse.degats}}</td>
        </tr>
        <tr>
            <td>Bras droit</td><td>{{armure.bras_droit.pa}}</td><td>{{armure.bras_droit.degats}}</td>
        </tr>
        <tr>
            <td>Bras gauche</td><td>{{armure.bras_gauche.pa}}</td><td>{{armure.bras_gauche.degats}}</td>
        </tr>
        <tr>
            <td>Jambe droite</td><td>{{armure.jambe_droite.pa}}</td><td>{{armure.jambe_droite.degats}}</td>
        </tr>
        <tr>
            <td>Jambe gauche</td><td>{{armure.jambe_gauche.pa}}</td><td>{{armure.jambe_gauche.degats}}</td>
        </tr>
    </table>
</div>

<!-- Section Histoire -->
<div class="section">
    <h2>Histoire</h2>
    <ul>
        {{#each histoire}}
            <li>Décennie : {{this.decade}} - Événement : {{this.event}}</li>
        {{/each}}
    </ul>
</div>
</body>
</html>
